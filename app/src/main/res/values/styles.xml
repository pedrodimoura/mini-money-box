<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">@android:color/white</item>
    </style>

    <style name="Widget.Button.Colored.Rounded" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/aqua_50</item>
        <item name="android:textColor">@drawable/button_primary_text_color</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">@dimen/text_style_medium</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="lineHeight">@dimen/line_height_button_primary</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Moneybox.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="background">@drawable/background_edit_text</item>
        <item name="backgroundTint">@android:color/black</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.Regular" parent="TextAppearance">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.Bold" parent="TextAppearance">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="MoneyboxBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/MoneyboxBottomSheetModal</item>
    </style>

    <style name="MoneyboxBottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/moneybox_bottom_sheet_shape</item>
    </style>

</resources>
